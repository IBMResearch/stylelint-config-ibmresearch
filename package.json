{
  "name": "stylelint-config-ibmresearch",
  "version": "0.12.0",
  "description": "Stylelint shareable config for the IBM Research CSS style guide",
  "license": "MIT",
  "repository": "github:IBMResearch/stylelint-config-ibmresearch",
  "main": "index.js",
  "scripts": {
    "format": "npm-run-all format:*",
    "format:eslint": "npm run lint:eslint -- --fix",
    "format:prettier": "prettier . --write",
    "lint": "npm-run-all --parallel lint:*",
    "lint:eslint": "eslint .",
    "prepare": "husky install"
  },
  "files": [
    "index.js"
  ],
  "keywords": [
    "stylelint",
    "stylelint-config"
  ],
  "peerDependencies": {
    "prettier": "2.x",
    "stylelint": "^14.4"
  },
  "dependencies": {
    "stylelint-config-hudochenkov": "^6.0.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-order": "^5.0.0"
  },
  "devDependencies": {
    "eslint": "^8.8.0",
    "eslint-config-ibmresearch": "^0.24.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.3",
    "npm-run-all": "^4.1.5",
    "prettier": "~2.5.1",
    "prettier-plugin-package": "^1.3.0",
    "stylelint": "^14.4.0"
  },
  "eslintConfig": {
    "extends": "ibmresearch"
  },
  "lint-staged": {
    "**/*{js,json,md,yml}": "prettier --write",
    "**/*.js": "eslint --fix"
  },
  "prettier": {
    "singleQuote": true
  }
}
