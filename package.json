{
  "name": "stylelint-config-ibmresearch",
  "version": "0.3.0",
  "description": "Stylelint shareable config for the IBM Research CSS style guide",
  "license": "MIT",
  "repository": "github:IBMResearch/stylelint-config-ibmresearch",
  "main": "index.js",
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "format": "npm run format:prettier",
    "format:prettier": "prettier --write \"**/*{js,json,md}\"",
    "lint": "npm run lint:eslint",
    "lint:eslint": "eslint \"**/*.js\""
  },
  "keywords": [
    "stylelint",
    "stylelint-config"
  ],
  "peerDependencies": {
    "stylelint": "^13.3.0"
  },
  "dependencies": {
    "stylelint-config-rational-order": "^0.1.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.0.0"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-ibmresearch": "^0.10.0",
    "husky": "^4.2.0",
    "lint-staged": "^10.1.0",
    "prettier": "2.0.4",
    "prettier-plugin-package": "^1.0.0",
    "stylelint": "^13.3.0"
  },
  "eslintConfig": {
    "extends": "ibmresearch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*{js,json,md}": [
      "prettier --write"
    ],
    "**/*.js": [
      "eslint --fix"
    ]
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true
  }
}
