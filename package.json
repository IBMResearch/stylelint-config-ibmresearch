{
  "name": "stylelint-config-ibmresearch",
  "version": "0.13.0",
  "description": "Stylelint shareable config for the IBM Research CSS style guide",
  "license": "MIT",
  "repository": "github:IBMResearch/stylelint-config-ibmresearch",
  "main": "index.js",
  "scripts": {
    "format": "npm-run-all format:*",
    "format:eslint": "npm run lint:eslint -- --fix",
    "format:prettier": "prettier . --write",
    "lint": "npm-run-all --parallel lint:*",
    "lint:eslint": "eslint .",
    "postinstall": "npx simple-git-hooks"
  },
  "files": [
    "index.js"
  ],
  "keywords": [
    "stylelint",
    "stylelint-config"
  ],
  "peerDependencies": {
    "prettier": "2.x",
    "stylelint": "^14.4"
  },
  "dependencies": {
    "stylelint-config-hudochenkov": "^6.0.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-order": "^5.0.0"
  },
  "devDependencies": {
    "eslint": "^8.11.0",
    "eslint-config-ibmresearch": "^0.25.0",
    "nano-staged": "~0.6.0",
    "npm-run-all": "^4.1.5",
    "prettier": "~2.6.0",
    "prettier-plugin-package": "^1.3.0",
    "simple-git-hooks": "^2.7.0",
    "stylelint": "^14.6.0"
  },
  "eslintConfig": {
    "extends": "ibmresearch"
  },
  "nano-staged": {
    "**/*{js,json,md,yml}": "prettier --write",
    "**/*.js": "eslint --fix"
  },
  "prettier": {
    "singleQuote": true
  },
  "simple-git-hooks": {
    "pre-commit": "./node_modules/.bin/nano-staged"
  }
}
